@model AppointmentSchedulerWeb.Models.Customer

@{
    ViewBag.Title = "Add New Customer";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h3><i class="fas fa-user-plus"></i> Add New Customer</h3>
        </div>

        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label for="CustomerName" class="form-label"><i class="fas fa-user"></i> Customer Name</label>
                    <input asp-for="CustomerName" class="form-control" placeholder="Enter full name" />
                    <span asp-validation-for="CustomerName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Address.AddressLine1" class="form-label"><i class="fas fa-map-marker-alt"></i> Address</label>
                    <input asp-for="Address.AddressLine1" class="form-control" placeholder="Enter address" required />
                    <span asp-validation-for="Address.AddressLine1" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Address.Phone" class="form-label"><i class="fas fa-phone"></i> Phone</label>
                    <input asp-for="Address.Phone" class="form-control" placeholder="Enter phone number" required pattern="[0-9]{10}" title="Phone number must be 10 digits." />
                    <span asp-validation-for="Address.Phone" class="text-danger"></span>
                </div>


                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Save
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

